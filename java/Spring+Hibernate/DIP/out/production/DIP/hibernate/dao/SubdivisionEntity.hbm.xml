<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="javasrc.hiber.SubdivisionEntity" table="subdivision">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="name">
            <column name="name" sql-type="text"/>
        </property>
        <property name="designation">
            <column name="designation" sql-type="text" not-null="true"/>
        </property>
        <property name="idSubdivPartOf">
            <column name="id_subdiv_part_of" sql-type="integer" not-null="true"/>
        </property>
        <set name="personEosById" inverse="true">
            <key>
                <column name="id_subdivision" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="javasrc.hiber.PersonEoEntity"/>
        </set>
        <set name="subdivisionsById" inverse="true">
            <key>
                <column name="id_subdiv_part_of" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="javasrc.hiber.SubdivisionEntity"/>
        </set>
    </class>
</hibernate-mapping>